<div class="register-user__container">
  {{#simple-form onsubmit="registerUser" class="register-user__window" as |formValues|}}
     <h3>The Iron Warrior</h3>
     <h5>Please Register and sign in</h5>
    {{mdl-textfield type="character-name" value=formValues.name label="Character Name"}}
    {{mdl-textfield value=formValues.email label="Email"}}
    {{mdl-textfield type="password" value=formValues.password label="Password"}}
    {{mdl-textfield type="password" value=formValues.password_confirmation label="Password Confirmation"}}
    <button class="register-user__button">
      <img class="index-map__training-img index-map__item" src="img/submit-button.png" alt="" />
    </button>
  {{/simple-form}}
</div>
