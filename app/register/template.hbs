<div class="register-user__container">
  {{#simple-form onsubmit="registerUser" class="register-user__window" as |formValues|}}
     <h3>The Iron Warrior</h3>
     <h5>Please Register and sign in</h5>
    {{input type="character-name" value=formValues.name placeholder="Character Name"}}
    {{input value=formValues.email placeholder="Email"}}
    {{input type="password" value=formValues.password placeholder="Password"}}
    {{input type="password" value=formValues.password_confirmation placeholder="Password Confirmation"}}

    <button>Submit</button>
  {{/simple-form}}
</div>
